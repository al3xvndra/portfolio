<h1>messages</h1>

{{#if errorDB}}
  <p>Internal server error</p>
{{else}}
  {{#if contact.length}}
    <ul>
      {{#each contact}}
        <h3>{{name}}</h3>
        <h3>{{email}}</h3>
        <h3>{{message}}</h3>

        <form action="/deleteMessage/{{id}}" method="POST">
          <input type="submit" value="delete" />
        </form>
      {{/each}}
    </ul>

  {{else}}
    <p>No messages atm</p>
  {{/if}}
{{/if}}