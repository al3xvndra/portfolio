<h1 class="pageName">login</h1>
{{#if errorMessages.length}}
  {{#each errorMessages}}
    <p class="err">{{this}}</p>
  {{/each}}
{{/if}}

<form class="form" action="/login" method="POST">
  <div>
    <input
      class="inputField"
      type="text"
      name="username"
      placeholder="username"
    />
  </div>
  <div>
    <input
      class="inputField"
      type="password"
      name="password"
      placeholder="password"
    />
  </div>
  <div>
    <input class="niceButton" type="submit" value="log in" />
  </div>
</form>