<h1>project</h1>
{{#if errorMessages.length}}
  {{#each errorMessages}}
    <p>{{this}}</p>
  {{/each}}
{{/if}}

{{#if project}}
  {{#if isLoggedIn}}
    <form
      action="/projects/{{project.id}}"
      method="POST"
      enctype="multipart/form-data"
    >
      <div>
        <input
          type="file"
          name="projectImage"
          placeholder="image"
          value="{{projectImage}}"
        />
      </div>
      <input type="submit" value="add" />
    </form>
  {{/if}}
  <p>Project name: {{project.title}}</p>
  <p>Project category: {{project.category}}</p>
  <p>Project description: {{project.description}}</p>
  <p>Project image: {{project.image}}</p>
  {{#if photos.length}}
    {{#each photos}}
      <img
        class="photoStyle"
        src="/uploads/{{projectImage}}"
        alt="An image showing part of my project"
      />
    {{/each}}
  {{else}}
    <p>No photos atm</p>
  {{/if}}
  <p>Project repository: {{project.repository}}</p>
  <p>Project link: {{project.link}}</p>
  <p>Project date: {{project.date}}</p>
{{else}}
  <p>That project does not exist</p>
{{/if}}